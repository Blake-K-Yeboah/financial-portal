{
  "name": "financial-portal",
  "version": "1.0.0",
  "description": "A financial portal built with the MERN stack",
  "main": "server.js",
  "author": "Blake Yeboah",
  "license": "MIT",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "test": "cross-env NODE_ENV=testing jest --testTimeout=10000",
    "client": "cd client && yarn start",
    "dev": "concurrently -kill-others \"yarn run server\" \"yarn run client\""
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^6.0.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.3",
    "nodemailer": "^6.5.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "26.6.0",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3"
  }
}
